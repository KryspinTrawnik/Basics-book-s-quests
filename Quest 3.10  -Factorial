Namespace ConsoleApp3
{
    class Factorial
    {
        static void Main(string[] args)
        {
            int n, Fact = 1;
            Console.WriteLine("Enter the number");
            n = Int32.Parse(Console.ReadLine());
            for (int i = 1; i <= n; i++)
            {
                Fact = Fact * i;
            }
            Console.Write("Factorial of {0} is {1}", n, Fact);
            Console.ReadKey();        
            
            

        }
    }
}
