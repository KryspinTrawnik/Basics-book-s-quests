namespace ConsoleApp3
{
    class SumOfEquataion
    {
        static void Main(string[] args)
        {
            int sum = 1;
            Console.WriteLine("Please give the number:");
            int num = Convert.ToInt32(Console.ReadLine());
            for (int i = 0; i <= num; i++)
            {
                if (i % 2 == 0)
                    sum = sum - num;
                else if (i % 2 != 0)
                    sum = sum + num;
                
            }
            Console.WriteLine("Equataion: W(n)=1 – 2 + 3 – 4 + ...± n for your number {0} is {1}", num, sum);
            Console.ReadKey(true);
        }
    }
