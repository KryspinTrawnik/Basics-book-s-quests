namespace ConsoleApp3
{
    class ArrayCopy
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Please, enter number of position in arrays");
            int n = Convert.ToInt32(Console.ReadLine());
            int[] tab1 = new int[n];
            int[] tab2 = new int[n];
            Random rand = new Random();
            Console.Write("Tab1 = ");
            for (int i = 0; i < tab1.Length; i++)
            {
                tab1[i] = (int)rand.Next(1, 1000);
                Console.Write("{0,5}", tab1[i]);
            }
            Console.WriteLine();
            Console.Write("Tab2 = ");
            Array.Copy(tab1, 0, tab2, 1, n - 1);
            Array.Copy(tab1, n - 1 , tab2, 0, 1);

            for (int i = 0; i < tab2.Length; i++)
            {
                Console.Write("{0,5}", tab2[i]);
            }
            Console.ReadKey();
        }
    }
   
}
